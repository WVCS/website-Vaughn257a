<html>
var teamList = getColumn("NFL Teams", "Team");
var iconList = getColumn("NFL Teams", "Image");
var conferenceList = getColumn("NFL Teams", "Conference");
var divisionList = getColumn("NFL Teams", "Division");
var coachList = getColumn("NFL Teams", "Head coach");
onEvent("start", "click", function( ) {
  setScreen("screen2");
  resetScreen();
});
onEvent("home", "click", function( ) {
  setScreen("screen1");
  resetScreen();
});
function conference(conferencename) {
  setProperty("conferenceOutput", "text", "Conference: " + conferencename);
}
function selectTeam(teamSelect) {
  var teamnameList = [];
  for (var i = 0; i < teamList.length; i++) {
    if (teamSelect == teamList [i]) {
      appendItem(teamnameList, teamList [i]);
      setProperty("teamOutput", "text", "Team: " + teamList[i]);
      setProperty("logoOutput", "image", iconList[i]);
      setProperty("headCoachOutput", "text", "Head Coach: " + coachList[i]);
      setProperty("divisionOutput", "text", "Division: " + divisionList[i]);
      if (conferenceList[i] == "AFC") {
        conference("AFC");
      }
      if (conferenceList[i] == "NFC") {
        conference("NFC");
      }
    }
  }
}
onEvent("teamSelect", "change", function( ) {
  selectTeam(getText("teamSelect"));
});

onEvent("randomizeButton", "click", function( ) {
  randomizeScreen();
});
function randomizeScreen() {
  var randomIndex = randomNumber(0, teamList.length - 1);
  setProperty("teamOutput", "text", "Team: " + teamList[randomIndex]);
  setProperty("logoOutput", "image", iconList[randomIndex]);
  setProperty("headCoachOutput", "text", "Head Coach: " + coachList[randomIndex]);
  setProperty("divisionOutput", "text", "Division: " + divisionList[randomIndex]);
  if (conferenceList[randomIndex] == "AFC") {
    conference("AFC");
  }
  if (conferenceList[randomIndex] == "NFC") {
    conference("NFC");
  }
}
function resetScreen() {
  setProperty("teamOutput", "text", "Team");
  setProperty("logoOutput", "image", "https://purepng.com/public/uploads/large/purepng.com-american-football-player-catching-a-ballfootballamericansportsamerican-footballsportathleten-831524001436n6pcr.png");
  setProperty("headCoachOutput", "text", "Head Coach: ");
  setProperty("divisionOutput", "text", "Division: ");
  setProperty("conferenceOutput", "text", "Conference: ");
}
</html>
